<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_child"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_child_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="5dp"
        android:text="Personal Details"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        

         <TextView
            android:id="@+id/txt_child_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
          <TextView
            android:id="@+id/txt_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
           <TextView
            android:id="@+id/txt_child_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        
        
        <TextView
            android:id="@+id/txt_child_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
        

        

        <TextView
            android:id="@+id/txt_child_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/txt_child_postalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
          <TextView
            android:id="@+id/txt_child_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingTop="13dp"
            android:text="Hello"
            android:textSize="15sp"
            android:textStyle="bold" />
          
        
        
    </LinearLayout>

</LinearLayout>